<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="80dp"    android:orientation="horizontal">    <RelativeLayout        android:id="@+id/morning"        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageView            android:id="@+id/image"            android:layout_width="24dp"            android:layout_height="24dp"            android:layout_marginTop="76dp"            android:layout_marginLeft="10dp"            android:background="@drawable/morning" />        <RelativeLayout            android:layout_width="341dp"            android:layout_height="79dp"            android:layout_centerHorizontal="true"            android:layout_marginTop="101dp"            android:background="@drawable/relative_layout_border">            <LinearLayout                android:layout_width="80dp"                android:layout_height="79dp"                android:background="@drawable/linerlayout_shape_morning"                android:orientation="vertical">                <TextView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:gravity="center"                    android:text="9  : 30"                    android:textColor="#FFFFFF" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:gravity="center"                    android:text="|"                    android:textColor="#FFFFFF" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:gravity="center"                    android:text="11 : 30"                    android:textColor="#FFFFFF" />            </LinearLayout>            <TextView                android:id="@+id/course_Name"                android:layout_width="80dp"                android:layout_height="29dp"                android:layout_marginStart="90dp"                android:layout_marginTop="8dp"                android:fontFamily="Arial"                android:gravity="center"                android:text="钢琴课"                android:textColor="#101010"                android:textSize="18dp" />            <TextView                android:id="@+id/stu_name"                android:layout_width="170dp"                android:layout_height="20dp"                android:layout_marginStart="90dp"                android:layout_marginTop="48dp"                android:text="杜小花,张小花,周小花,李小花"                android:textSize="12dp" />            <RelativeLayout                android:layout_width="70dp"                android:layout_height="79dp"                android:layout_marginStart="263dp">                <Button                    android:id="@+id/start_teaching"                    android:layout_width="70dp"                    android:layout_height="25dp"                    android:layout_marginTop="10dp"                    android:background="@drawable/btn_shape"                    android:text="上课按钮"                    android:textColor="#FFFFFF"                    android:textSize="14sp" />                <Button                    android:id="@+id/start_comment"                    android:layout_width="70dp"                    android:layout_height="25dp"                    android:layout_marginTop="45dp"                    android:background="@drawable/btn_shape"                    android:text="评价按钮"                    android:textColor="#FFFFFF" />            </RelativeLayout>        </RelativeLayout>    </RelativeLayout></android.support.constraint.ConstraintLayout>